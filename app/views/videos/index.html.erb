<!DOCTYPE html>
<html>
  <head>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-116753536-1"></script>
    <script>
      window.dataLayer = window.dataLayer || [];
      function gtag(){dataLayer.push(arguments);}
      gtag('js', new Date());

      gtag('config', 'UA-116753536-1');
    </script>
    <title>Demon Video | Free Cult Horror Streaming</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <%= render "layouts/header" %>

<section class="movies">

  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row">

      <% @videos.each do |video| %>
      	<div class="col-md-4 cover-image">
      	    <%= link_to image_tag(video.cover_image), video_path(video) %>
      	</div>
      <% end %>

      </div>
    </div>
  </div>

</section>


</body>
</html>
